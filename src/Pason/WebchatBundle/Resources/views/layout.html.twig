<!doctype html>
	<head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<title>Webchat</title>
    	<meta name="viewport" content="width=device-width">
		
		
        {% block stylesheets %}           
        	<link rel="stylesheet" href="{{ asset('bundles/pasonwebchat/css/bootstrap.css') }}" type="text/css"> 
            <link rel="stylesheet" href="{{ asset('bundles/pasonwebchat/css/main.css') }}" type="text/css"> 
                       
        {% endblock %}
    	
    	{% block javascripts %}
    	   	
    		<script src="{{ asset('bundles/pasonwebchat/js/jquery-1.8.2.min.js') }}"></script> 
    		<script src="{{ asset('bundles/pasonwebchat/js/bootstrap.js') }}"></script> 
    		<script src="{{ asset('bundles/pasonwebchat/js/chat.js') }}"></script> 
		  
	    {% endblock %}
    	    
    </head>
    
    <body>
    	<div class="navbar navbar-inverse navbar-fixed-top">
	      <div class="navbar-inner">
	        <div class="container">
	          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	            <span class="icon-bar"></span>
	          </a>
	          <a class="brand" href="{{ path('pason_webchat_chat') }}">Webchat</a>
	          <div class="nav-collapse collapse">
	            <ul class="nav">
	              {% if app.user.username is defined %} 
	              	<li><a href="#">Zalogowano jako {{ app.user.username }}</a></li>
	              	<li><a href="{{ path('fos_user_security_logout') }}">wyloguj</a></li>
	              {% else %}
	              	<li><a href="{{ path('fos_user_security_login') }}">Logowanie</a></li>
	              	<li><a href="{{ path('fos_user_registration_register') }}">Załóż konto</a></li>
	              {% endif %}
	                         
	            </ul>
	          </div><!--/.nav-collapse -->
	        </div>
	      </div>
	    </div>
    
    	<div class="container">           
       		
		    
		    	{%block content %}
	    	       
		    	{% endblock %}
    	
			
		</div>
    </body>
</html>

